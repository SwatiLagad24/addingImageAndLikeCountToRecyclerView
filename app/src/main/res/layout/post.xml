<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Post"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="254dp"
        android:layout_height="43dp"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <ImageView
        android:id="@+id/imgShow"
        android:layout_width="400dp"
        android:layout_height="500dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle">

    </ImageView>

    <TextView
        android:layout_marginTop="30sp"
        android:id="@+id/txtLikesShow"
        android:layout_width="64dp"
        android:layout_height="33dp"
        android:text="like"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/imgLikes"
        app:layout_constraintTop_toBottomOf="@+id/imgShow">

    </TextView>

<ImageView
    android:layout_marginTop="20sp"
    android:layout_marginLeft="30sp"

    android:layout_width="50dp"
    android:id="@+id/imgLikes"
    app:layout_constraintTop_toBottomOf="@id/imgShow"
    app:layout_constraintLeft_toLeftOf="parent"
    android:src="@drawable/like"
    android:layout_height="50dp"/>

    <ImageView
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_width="30dp"
        android:id="@+id/imgComment"
        app:layout_constraintTop_toBottomOf="@id/imgShow"
        app:layout_constraintLeft_toRightOf="@id/txtLikesShow"
        android:src="@drawable/comment"
        android:layout_height="30dp"/>

    <ImageView
        android:layout_marginLeft="70sp"
        android:layout_marginTop="20sp"
        android:layout_width="30dp"
        android:id="@+id/imgSend"
        app:layout_constraintTop_toBottomOf="@id/imgShow"
        app:layout_constraintLeft_toRightOf="@id/imgComment"
        android:src="@drawable/send"
        android:layout_height="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>